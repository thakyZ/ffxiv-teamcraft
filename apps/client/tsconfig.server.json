{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "baseUrl": "."
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.po.ts"
  ],
  "angularCompilerOptions": {
    "entryModule": "src/app/app.server.module#AppServerModule",
    "outputHashing": false
  },
  "files": [
    "src/main.server.ts",
    "server.ts"
  ],
  "include": [
    "apps/client/src/**/*.d.ts"
  ]
}
